
#!/bin/bash
# Update package index
yum -y update
yum install npm 
yum -get update 
yum -get upgrade
curl -sL https://deb.nodesource.com/setup_10.x | sudo -E bash - 

# Install Node.js and npm
yum install -y nodejs 
